<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1dd0b"
    android:weightSum="10"
    tools:context=".ShopPlaceOrderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every Thing\nIn Order?"
            android:textSize="28dp"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="#000"
            android:layout_marginLeft="150dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Detail:  "
                android:textStyle="bold"
                android:textColor="#000" />
            <TextView
            android:id="@+id/ItmDtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Address:  "
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/ShpAdr"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/ShopOtherPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want It Delivered Someplace Other Than Yours?"
            android:textSize="10dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffff">
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
             android:textColor="#000"
        android:textStyle="bold"
        android:text="Estimated Delivery Charges:" />
        <TextView
            android:id="@+id/ShopDeliveryCharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
            android:textColor="#000"
        android:layout_marginLeft="79dp"
        android:text="250RS"
            android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Estimated Product Price:" />
            <TextView
                android:id="@+id/ShopProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="100dp"
                android:text="250RS"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:text="_____________________________________________"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#ffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Total:" />
            <TextView
                android:id="@+id/ShopTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginLeft="200dp"
                android:text="250RS"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/ShopPlaceOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center"
                android:background="#fff"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>